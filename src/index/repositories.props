<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup>
    <Repository Include="corefx">
      <Url>https://github.com/dotnet/corefx</Url>
      <Projects>
        src/*/src/*.csproj;
        src/*/src/*.vbproj;
      </Projects>
      <PrepareCommand>
        build /p:BuildNative=false /p:BuildPackages=false -binarylog
      </PrepareCommand>
    </Repository>
    <Repository Include="winforms">
      <Url>https://github.com/dotnet/winforms</Url>
      <Projects>
        src/*/src/*.csproj;
      </Projects>
      <ExcludeProjects>
        src/*/ref/*.csproj;
      </ExcludeProjects>
      <PrepareCommand>
        build
      </PrepareCommand>
    </Repository>
    <Repository Include="wpf">
      <Url>https://github.com/dotnet/wpf</Url>
      <Projects>
        src/Microsoft.DotNet.Wpf/src/*/*.csproj
      </Projects>
      <PrepareCommand>
        build
      </PrepareCommand>
    </Repository>
    <Repository Include="corefxlab">
      <Url>https://github.com/dotnet/corefxlab</Url>
      <Projects>
        src/**/*.csproj;
      </Projects>
      <PrepareCommand>
        build -SkipTests "true"
      </PrepareCommand>
    </Repository>
    <Repository Include="coreclr">
      <Url>https://github.com/dotnet/coreclr</Url>
      <Projects>
        src/System.Private.CoreLib/System.Private.CoreLib.csproj;
      </Projects>
      <PrepareCommand>
        build -skiptests -skipnative -windowsmscorlib
      </PrepareCommand>
    </Repository>
    <Repository Include="iot">
      <Url>https://github.com/dotnet/iot</Url>
      <Projects>
        src/**/*.csproj;
      </Projects>
      <PrepareCommand>
        build
      </PrepareCommand>
    </Repository>
    <Repository Include="msbuild">
      <Url>https://github.com/Microsoft/msbuild</Url>
      <Branch>master</Branch>
      <DeepClone>true</DeepClone>
      <Projects>
        src/**/*.csproj;
      </Projects>
      <ExcludeProjects>
        src/Deprecated/**/*.csproj;
        src/*UnitTests*/**/*.csproj;
        src/Samples/**/*.csproj;
      </ExcludeProjects>
      <PrepareCommand>
        powershell -NoLogo -NoProfile -ExecutionPolicy Bypass -Command "eng/common/build.ps1 -restore"
      </PrepareCommand>
    </Repository>
    <Repository Include="machinelearning">
      <Url>https://github.com/dotnet/machinelearning</Url>
      <Projects>
        src/**/*.csproj;
      </Projects>
      <PrepareCommand>
        build -- /t:RestoreProjects
      </PrepareCommand>
    </Repository>
    <Repository Include="wcf">
      <Url>https://github.com/dotnet/wcf</Url>
      <Projects>
        src/System.*/src/*.csproj;
      </Projects>
      <PrepareCommand>
        powershell -NoLogo -NoProfile -ExecutionPolicy Bypass -Command "eng/common/build.ps1 -restore"
      </PrepareCommand>
    </Repository>
    <Repository Include="aspnetcore">
      <Url>https://github.com/aspnet/aspnetcore</Url>
      <Projects>
        src/**/src/**/*.csproj;
      </Projects>
      <PrepareCommand>
        restore.cmd -nobuildnodejs
      </PrepareCommand>
    </Repository>
    <Repository Include="aspnet-extensions">
      <Url>https://github.com/aspnet/extensions</Url>
      <Projects>
        src/**/src/**/*.csproj;
      </Projects>
      <PrepareCommand>
        restore.cmd
      </PrepareCommand>
    </Repository>
  </ItemGroup>
</Project>
